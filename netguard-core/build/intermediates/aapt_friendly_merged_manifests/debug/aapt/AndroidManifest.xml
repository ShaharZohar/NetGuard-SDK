<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.shaharzohar.netguard.core" >

    <uses-sdk android:minSdkVersion="24" />

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>

        <!-- AndroidX App Startup for zero-config initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="dollar_openBracket_applicationId_closeBracket.androidx-startup"
            android:exported="false"
            tools:node="merge" >
            <meta-data
                android:name="io.github.shaharzohar.netguard.core.internal.NetGuardInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>